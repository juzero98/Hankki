<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sandle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20sp"
    android:textSize="25sp"
    android:textStyle="bold"
    android:text="학식당 소개"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요? 한성대학교 창의관 식당을 운영하는 산들푸드입니다.
                      돈까스, 오므라이스, 누들, 덮밥 등 다양한 일품요리를 판매하오니
                      한성대학교 구성원 분들의 많은 이용 부탁드립니다. 감사합니다. ^^"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="학생식당 학기 중 운영시간"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:30 ~ 19:00 (브레이크 타임 15:30 ~ 16:30)"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="방학 중 학생식당 운영 시간"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:30 ~ 19:00 (토/일요일/공휴일 운영 없음."/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="브레이크타임 : 15:30 ~ 16:30"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="안내 및 혜택"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="창의관 식당 무료 와이파이 사용 가능"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="김밥/덮밥/볶음밥류 포장가능"/>



</LinearLayout>