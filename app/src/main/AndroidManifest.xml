<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:activity="http://schemas.android.com/apk/distribution"
    package="com.example.hankki">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity" android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".LoginActivity" android:parentActivityName=".MainActivity"/>
        <activity android:name=".JoinActivity" android:parentActivityName=".MainActivity"/>

        <activity android:name=".SelectActivity"/>

        <activity android:name=".WriteActivity"/>
        <activity android:name=".ShowActivity"/>

        <activity android:name=".MenuActivity" android:parentActivityName = ".SelectActivity"/>

        <activity android:name=".CommunityActivity" android:parentActivityName = ".SelectActivity"/>

        <activity android:name=".MyPageActivity" android:parentActivityName = ".SelectActivity"/>

        <activity android:name=".DetailActivity" android:parentActivityName = ".MenuActivity"/>

        <activity android:name=".CartActivity" android:parentActivityName = ".DetailActivity"/>

        <activity android:name=".RatingActivity" android:parentActivityName = ".SelectActivity"/>

        <activity android:name=".SeeReviewActivity" android:parentActivityName = ".RatingActivity"/>

        <activity android:name=".OrderActivity" android:parentActivityName = ".RatingActivity"/>

        <activity android:name=".WaitingActivity" android:parentActivityName = ".OrderActivity"/>

        <activity android:name=".GiveReviewActivity"/>

        <activity android:name=".WriteReview"/>

        <activity android:name=".OneLineReview"/>

    </application>

</manifest>